{
  "name": "@terwanerik/scrolltrigger",
  "version": "1.0.0",
  "description": "Triggers classes on html elements based on the scroll position. It makes use of requestAnimationFrame so it doesn't jack the users scroll, that way the user / browser keeps their original scroll behaviour. Animations run when the browser is ready for it.",
  "main": "lib/ScrollTrigger.js",
  "directories": {
    "dist": "dist",
    "src": "src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terwanerik/ScrollTrigger.git"
  },
  "keywords": [
    "scroll",
    "trigger",
    "animation",
    "css3"
  ],
  "author": "Erik Terwan <erik@erikterwan.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/terwanerik/ScrollTrigger/issues"
  },
  "homepage": "https://github.com/terwanerik/ScrollTrigger#readme",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
    "demo": "cross-env NODE_ENV=demo webpack-dev-server --open --hot",
    "build-demo": "cross-env NODE_ENV=demo webpack",
    "build": "cross-env NODE_ENV=production webpack"
  },
  "engines": {
    "node": ">=6"
  },
  "dependencies": {
    "object-extend": "^0.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.3.3",
    "cross-env": "^5.2.1",
    "html-webpack-plugin": "^2.30.1",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^3.1.11"
  }
}
